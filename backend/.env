# backend/.env - Development Configuration

# Application Configuration
LOCALI_APP_NAME="CodeAssist AI"
LOCALI_APP_VERSION="0.1.0"

# Server Settings
LOCALI_HOST="localhost"
LOCALI_PORT=8080
LOCALI_RELOAD=true


# Logging
LOCALI_LOG_LEVEL="INFO"
LOCALI_LOG_FILE="logs/locali.log"

# Model Configuration
LOCALI_MODELS_DIR="models"
LOCALI_DEFAULT_MODEL="phi-3.5-mini"
LOCALI_MAX_MODELS_LOADED=2

# Performance Settings
LOCALI_MAX_MEMORY_GB=16
LOCALI_MAX_CONTEXT_LENGTH=8192
LOCALI_MAX_TOKENS_PER_REQUEST=4096

# Database Configuration
LOCALI_DATABASE_URL="data/locali.db"
LOCALI_VECTOR_DB_PATH="data/vectors"

# Security Settings - DISABLED FOR DEVELOPMENT
LOCALI_ENABLE_NETWORK_ISOLATION=false
LOCALI_ENABLE_CONVERSATION_ENCRYPTION=false
LOCALI_ALLOWED_DOMAINS=""

# Performance Optimization
LOCALI_USE_GPU=true
LOCALI_GPU_LAYERS=-1  # -1 for auto
LOCALI_CPU_THREADS=  # Leave empty for auto

# Development Settings
LOCALI_DEBUG=true
LOCALI_CORS_ORIGINS="http://localhost:3000,http://localhost:5173"